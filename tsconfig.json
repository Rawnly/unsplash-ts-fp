{
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"],
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
